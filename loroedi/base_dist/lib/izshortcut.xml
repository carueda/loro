<shortcuts>
  <programGroup defaultName="LoroEDI" location="applications"/>
  <shortcut
     name="LoroEDI"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\bin\loroedi.bat"
     commandLine=""
     description="Entorno de Desarrollo Integrado de Loro"
     initialState="noShow">
     <createForPack name="System"/>
   </shortcut>

   <shortcut
     name="Desinstalar LoroEDI"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
     commandLine=""
     description="Desinstalar LoroEDI">
     <createForPack name="System" />
   </shortcut>
   
</shortcuts>
